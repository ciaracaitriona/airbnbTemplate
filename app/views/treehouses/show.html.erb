<div class="show-page" style="position: relative;">
  <div class="top-buttons mb-3">
  <button class="btn btn-success" role="button"><%= link_to "Back to Treehouses", treehouses_path, class: "text-decoration-none text-white" %>
  </button>
  </div>


    <div class="form-booking position-fixed top-10 end-0 me-5 btn-lg" data-controller="toggle">
      <button data-action="click->toggle#fire" class="btn btn-success text-decoration-none text-white" >Book now!</button>
      <div data-toggle-target="element" class="d-none">
        <%= render "shared/booking_form" %>
      </div>
    </div>

<div class="show-container">

  <h1 class="text-secondary d-flex justify-content-center mt-4 mb-3"><%= @treehouse.name.capitalize %></h1>

  <div class="show-treehouse">
    <img id="left" src="https://images.unsplash.com/photo-1550934482-7904d33d1b54?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8dHJlZWhvdXNlfGVufDB8fDB8fHww" alt="">
    <div class="righthand">
      <div class="d-flex">
        <img id="topright" src="https://plus.unsplash.com/premium_photo-1664047696174-72d3d84e6d5e?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8dHJlZWhvdXNlfGVufDB8fDB8fHww" alt="">
        <img id="bottomright" src="https://images.unsplash.com/photo-1615354310157-c78b1be66eed?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dHJlZWhvdXNlfGVufDB8fDB8fHww" alt="">
      </div>
    </div>
  </div>



  <div class="info-and-booking">
    <div class="info">
      <h3><strong><%= @treehouse.name %></strong></h3>
      <p>No. of guests <%= @treehouse.guests %></p>
      <p>Your host is: <strong><%= @treehouse.user.first_name %></strong></p>
      <p>You'll be staying in a <%= @treehouse.tree_type.capitalize %> tree</p>
      <p>Location: <%= @treehouse.location %></p>
    </div>

    <div class="info-reviews">
      <a href="#reviews"><%= @treehouse.reviews.count %> Reviews</a>
    </div>

    <p class="price-show">Â£ <%= @treehouse.price %> per night</p>



  </div>

  <h2>Description:</h2>
  <p><%= @treehouse.description %></p>

<h2>Where you will be staying:</h2>
<p>You will be nested in the heart of <%= @treehouse.location %>:</p>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-marker-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>




<h2 class="mt-4">Reviews:</h2>
  <div class="review-container" id="reviews">
    <% @reviews.each do |review| %>
      <div class="review-card">
        <div class="review-number">
          <div>
          <p><%= review.created_at.strftime("Created on %m/%d/%Y") %></p>
          </div>
          <div>
            <h3><%= review.rating %></h3>
          </div>
        </div>
        <div class="review-text">
          <h3>''<%= review.title %>....</h3>
          <p><%= review.content %>''</p>
        </div>
      </div>
    <% end %>
  </div>

</div>

</div>
